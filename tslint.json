{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "case-insensitive"
      }
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
